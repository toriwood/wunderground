<style>
	body {
		background: url(<%= @url %>);
		background-size: cover;
	}
</style>

<div class="col s12 m6 l6">
	<div class="card">
		<div class="card-content">
			<p><span class="card-title">Forecast: <%= @location %></span></p>
			<p class="right"><%= image_tag @icon %></p>
			<p>Temp: <%= @temp_f %> ºF</p>
			<p>Feels like: <%= @feels_like %> ºF</p>
			<p><%= @weather_word %></p>
		</div>
		<div class="card-action">
			<%= link_to "Full Forecast", @forecast_url, target: "_blank" %>
		</div>
	</div>
</div>

<div class="col s12 m6 l6">
	<div class="card">
		<div class="card-content">
			<p><span class="card-title">Look up the forecast in another location:</span></p>
			<%= render 'form' %>
		</div>
	</div>
</div>

